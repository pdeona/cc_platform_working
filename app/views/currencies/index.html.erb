
<h1>Coins</h1>

<ol>
	<% prices = prices('USD') %>
	<% ApiHelper::CORE_COINS.each do |curr| %>
		<li>
			<div>
				<%= "#{curr[:name].capitalize} (#{curr[:symbol].upcase}) - #{sprintf '%.2f', prices[curr[:symbol]]}"  %>
				<ol>
					
					<% price_hist_by_hour(curr[:symbol])["Data"].each do |node| %>
						<li><%= node %></li>
					<% end %>
				</ol>
			</div>
		</li> 

		
	<% end %>
</ol>